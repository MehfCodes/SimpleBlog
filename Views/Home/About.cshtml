@{
    ViewData["Title"] = "About SimpleBlog";
}

<section class="about-hero d-flex align-items-center justify-content-center flex-column text-center py-5 title-section">
    <h1 class="display-5 fw-bold mb-3">About <span class="title-span">SimpleBlog</span></h1>
    <p class="lead text-muted" style="max-width: 650px;">
        A place where stories, ideas, and creativity come together — built with simplicity and passion.
    </p>
    <div class="mt-4">
        <a href="/" class="btn btn-outline-primary px-4 py-2 rounded-pill">
            Back to Home
        </a>
    </div>
</section>


<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
            <p class="fs-5 text-muted">
                <b>SimpleBlog</b> is a clean, minimalistic platform built for sharing thoughts, stories, and inspiration.
                It’s designed to focus on what truly matters — <span class="text-dark fw-semibold">your content</span>.
                Whether you’re a writer, developer, or thinker, SimpleBlog gives you a quiet space to express yourself.
            </p>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="p-4 border rounded-3 about-card hover-card bg-light">
                <i class="bi bi-pencil display-5 text-dark mb-3"></i>
                <h5 class="fw-bold">Write Freely</h5>
                <p class="text-muted">A simple and distraction-free editor for creative minds.</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="p-4 border rounded-3 about-card hover-card bg-light">
                <i class="bi bi-journal-text display-5 text-dark mb-3"></i>
                <h5 class="fw-bold">Share Stories</h5>
                <p class="text-muted">Publish your thoughts, reach readers, and build your voice.</p>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="p-4 border rounded-3 about-card hover-card bg-light">
                <i class="bi bi-people display-5 text-dark mb-3"></i>
                <h5 class="fw-bold">Connect</h5>
                <p class="text-muted">Join a community that values authenticity and creativity.</p>
            </div>
        </div>
    </div>
</div>

<section class="about-footer py-5 text-center text-muted border-top">
    <div class="container">
        <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" alt="SimpleBlog Icon" width="80" class="mb-3 opacity-75" />
        <p class="mb-0">Crafted with ❤️ by the SimpleBlog Team</p>
        <small class="text-secondary">© @DateTime.Now.Year SimpleBlog. All rights reserved.</small>
    </div>
</section>

<style>
    .title-section{
        background: linear-gradient(135deg, #e3f2fd 0%, #ffffff 100%);
        color: #182c49;
    }
    .title-span{
        color:#1565c0;
    }
    .about-hero {
        height: 60vh;
    }

    .about-card {
        transition: all 0.3s ease;
    }

    .about-card:hover {
        transform: translateY(-5px);
        background-color: #f8f9fa;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    .about-footer {
        background-color: #fafafa;
    }
</style>
