@{
    ViewData["Title"] = "Contact Us";
}

<section class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-3">Contact Us</h1>
        <p class="text-muted lead">We’d love to hear from you! Send us a message and we’ll get back to you shortly.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 p-4">
                <form asp-action="Contact" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label"></label>
                        <input class="form-control" placeholder="Your Name" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label"></label>
                        <input class="form-control" placeholder="Your Email" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label  class="form-label"></label>
                        <textarea  class="form-control" rows="5" placeholder="Your Message"></textarea>
                        <span  class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary px-5" disabled >Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
