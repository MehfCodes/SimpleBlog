@model SimpleBlog.Models.ViewModel.RegisterViewModel;
<div class="container">
    <div class="p-4 w-auto">
            @if (!ViewData.ModelState.IsValid)
            {
                <div>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="alert alert-danger p-2 mb-2 rounded">
                            @error.ErrorMessage
                        </div>
                    }
                </div>
            }
    </div>
</div>
 <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 500px; height: 460px;">
            <h3 class="text-center mb-4 fw-bold">Register</h3>

            <form asp-action="Register" method="post" class="p-4">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100 fw-bold ">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>
