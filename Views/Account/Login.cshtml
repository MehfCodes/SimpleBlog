@model SimpleBlog.Models.ViewModel.LoginViewModel;
<div class="container">
    <div class="p-4 w-auto">
            @if (!ViewData.ModelState.IsValid)
            {
                <div>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div class="alert alert-danger p-2 mb-2 rounded">
                            @error.ErrorMessage
                        </div>
                    }
                </div>
            }
    </div>
</div>
<div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 500px; height: 460px;">
            <h3 class="text-center mb-4 fw-bold">Login</h3>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check" style="margin-top: 20px;">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-bold" style="margin-top: 30px;">
                    Login
                </button>
            </form>

            <div class="text-left mt-3" style="font-size:16px;text-decoration:none;">
                <span>Don't have an account?</span>
                <a asp-controller="Account" asp-action="Register" style="text-decoration:none;"> Register</a>
            </div>
        </div>
    </div>