@model IEnumerable<SimpleBlog.Models.Domain.Tag>

@{
    ViewData["Title"] = "Tags";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Tags</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg fw-bold"></i> Create New Tag
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="container col-8">
        <table class="table table-striped align-middle text-center mt-5 text-center">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-warning w-5">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger w-5" data-bs-toggle="modal" data-bs-target="#deleteModal_@tag.Id">
                        Delete
                    </button>
                        @* Modal *@
                    <div class="modal fade" id="deleteModal_@tag.Id" tabindex="-1" aria-labelledby="deleteModalLabel_@tag.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title" id="deleteModalLabel_@tag.Id">Confirm Delete</h5>
                                    <button type="button" class="btn-close bg-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete the post "<b>@tag.Name</b>"?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>

                                    <form asp-action="Delete" asp-route-id="@tag.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@tag.Id" />
                                        <button type="submit" class="btn btn-danger">Yes</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
    </div>
}
else
{
    <h4>No tags available</h4>
}
