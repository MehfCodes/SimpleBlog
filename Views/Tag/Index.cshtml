@model IEnumerable<SimpleBlog.Models.Domain.Tag>

@{
    ViewData["Title"] = "Tags";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Tags</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg fw-bold"></i> Create New Tag
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="container col-8">
        <table class="table table-striped align-middle text-center mt-5 text-center">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-warning w-5">Edit</a>
                    <form asp-action="Delete" asp-route-id="@tag.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger w-5"
                                onclick="return confirm('Are you sure you want to delete this tag?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    </div>
}
else
{
    <h4>No tags available</h4>
}
